.userT{
  background: #00C4B8;
  padding: 30px 0;
  text-align: center;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
}

.usermotto {
  margin-top: 200px;
}
.list_f{
  padding: 10px 15px;
  background: #fff;
  border-bottom: 1px solid #f5f5f5;
  box-sizing: border-box;
  font-size: 14px;
}
.list_f text{
  margin-right: 10px;
  vertical-align: middle;
}
